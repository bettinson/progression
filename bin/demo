#!/usr/bin/env ruby

require_relative '../lib/progression.rb'

puts "More elements than bars in the window"

arr_1 = [*1..10000]
p = Progression.new(arr_1.size)

arr_1.size.times do
  p.tick
  sleep(0.001)
end

puts "More bars than elements in the window"
arr_2 = [*1..2]
p = Progression.new(arr_2.size)

arr_2.size.times do
  p.tick
  sleep(0.5)
end
